  <table border>
  
  {% for car in cars %}
        <tr>
              <td colspan = "2"><b>{{car.licensePlate}}</b></td>
              <td colspan = "2"><b>{{car.brand}}</b></td>
              <td colspan = "2"><b>{{car.colour}}</b></td>
              <td colspan = "2"><b>{{car.year}}</b></td>
              <td colspan = "2"><b>{{car.price}}</b></td>
              <td colspan = "2"><b>{{car.customerNumber}}</b></td>
              <td colspan = "2"><b>{{car.start}}</b></td>
  
          <td>
            <form method="post" action="/editCar/{{car.licensePlate}}/{{car.brand}}/{{car.colour}}/{{car.year}}/{{car.price}}">
              <input type="submit" style="width:100%" value="Edit">
            </form>
          </td>
  
          <td>
            <form method="post" action="/removeCar/{{car.licensePlate}}/{{car.brand}}"
                  onsubmit="return confirm('Are you sure you want to remove the car {{car.brand}} {{car.brand}} with the license plate number {{car.licensePlate}}?')">
              <input type="submit" style="width:100%" value="Remove">
            </form>
          </td>
      {% endfor %}
    </table>
    



