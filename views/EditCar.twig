		<main region="main" class="main site-content">
	<div class="mainsection">
		<section class="form">
			<legend class="formHeader">
				<h2>Edit Car</h2>
			</legend>
		
			<form id="editCar" method="post" action="">
				<label>
					License plate:
					<input disabled type="text" name="licensePlate" value="{{licensePlate}}">
				</label>
				<label>
					Brand:
					<select name="brand" type="text" >
					<option selected value="{{brand}}">{{brand}}</option>
						{% for brand in brands %}
						
								<option value="{{brand}}">{{brand}}</option>

							{% endfor %}
						</select>
				</label>
		
					<label>
						Colour:
						<select name="colour" type="text" >
						<option selected value="{{colour}}">{{colour}}</option>
							{% for colour in colours %}
									<option value="{{colour}}">{{colour}}</option>
								{% endfor %}
							</select>
					</label>
		
						<label>
							Year:
							<input id="year" type="text" name="year" value="{{year}}" autofocus="autofocus">
						</label>
		
						<label>
							Price:
							<input id="price" type="text" name="price" value="{{price}}" autofocus="autofocus">
						</label>
						<input class="btn btn-custom  col mt-2" type="submit" value="Edit car" onclick="validation()">
					</form>
					 <a href="/carsMenu" class="btn btn-danger col mt-2">Cancel</a>
		</section>
	</div>
		</main>
		<script>

			function validation() { // lagrar year input
let year = document.getElementById("year").value;
// lagrar price input
let price = document.getElementById("price").value;


if (price > 0 && year > 1900 && year < 2020) {
document.getElementById("editCar").action ="/carEdited/{{licensePlate}}/{{brand}}/{{colour}}/{{year}}/{{price}}";

} else {
alert("Invalid input. Please note that the price cannot be negative and the year must be between 1900-2019.");
}
}
		</script>
	{% endblock %}
