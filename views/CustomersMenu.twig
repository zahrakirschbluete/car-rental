{% block customersMenu %}
	
				<header class="text-center m-5">
					<h2 class=" font-weight-bold">Renting Done Right.
					</br>
					Finally.</h2>
			</header>



<nav class="navbar navbar-expand-lg navbar-dark nav-bg " >
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
  <ul class="navbar-nav mx-auto font-weight-bold">
      <li class="nav-item active">
        <a class="nav-link" href="/customersMenu">Customers</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/carsMenu">Cars</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/rentCar">Rent Car</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/returnCar">Return Car</a>
      </li>
	  <li class="nav-item">
        <a class="nav-link" href="/history">History</a>
      </li>
    </ul>
  </div>
</nav>

<main region="main" class="container">
<div>
	<a href="/addCustomer" class="btn btn-custom mt-5 float-right">Add customer</a>
</div>
		<table class=" table table-responsive-sm table-striped">
			<thead >

				<th scope="col">
					<b>Social Security Number</b>
				</th>


				<th scope="col">
					<b>Name</b>
				</th>
				<th scope="col">
					<b>Address</b>
				</th>
				<th scope="col">
					<b>Postal Address</b>
				</th>
				<th scope="col">
					<b>Phone Number</b>
				</th>
			</thead>
			<tbody>
				{% for customer in customers %}
					<tr>
						<td scope="row">

							<b>{{customer.customerNumber}}</b>
						</td>
						<td>
							<b>{{customer.customerName}}</b>
						</td>
						<td>
							<b>{{customer.customerAddress}}</b>
						</td>
						<td>
							<b>{{customer.postalAddress}}</b>
						</td>
						<td>
							<b>{{customer.phoneNumber}}</b>
						</td>
						<td>
							{% if customer.statusRented == 0 %}
								<form method="post" action="/editCustomer/{{customer.customerNumber}}/{{customer.customerName}}/{{customer.customerAddress}}/{{customer.postalAddress}}/{{customer.phoneNumber}}">
									<input class="btn btn-custom" type="submit" value="Edit">
								</form>
							</td>
						</td>
						<td>

							<form method="post" action="/removeCustomer/{{customer.customerNumber}}/{{customer.customerName}}" onsubmit="return confirm('Are you sure you want to remove customer {{customer.customerName}}?')">
								<input class="btn btn-sm" type="submit" style="width:100%" value="Remove">
							</form>
						</td>
					{% else %}
						<form method="post" action="/editCustomer/{{customer.customerNumber}}/{{customer.customerName}}/{{customer.customerAddress}}/{{customer.postalAddress}}/{{customer.phoneNumber}}">
							<input class="btn btn-custom" disabled type="submit" value="Edit"></form>
					</td>
					<td>
						<form method="post" action="/removeCustomer/{{customer.customerNumber}}/{{customer.customerName}}" onsubmit="return confirm('Are you sure you want to remove customer {{customer.customerName}}?')">
							<input class="btn btn-sm" disabled type="submit" style="width:100%" value="Remove"></form>
					</td>
				{% endif %}
			{% endfor %}
		</td>
	</td>
</tr></tbody></table></main>{% endblock %}
